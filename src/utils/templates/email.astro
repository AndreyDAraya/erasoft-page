---
interface Props {
  name: string;
  message: string;
  email: string;
  phone: string;
}

const { name, message, email, phone } = Astro.props;

---

<div>
    <div class="flex flex-col">
        <h3 class="">Name</h3>
        <p class="">{name}</p>
    </div>
    <br>
    <div class="flex flex-col">
        <h3 class="">Email</h3>
        <p class="">{email}</p>
    </div>
    <br>
    <div class="flex flex-col">
        <h3 class="">Message</h3>
        <p class="">{message}</p>
    </div>
    <br>
    <div class="flex flex-col">
        <h3 class="">Phone</h3>
        <p class="">{phone}</p>
    </div>
    
</div>
  